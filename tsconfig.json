{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES6"
    },
    "include": ["src"],
    "exclude": [
        "**/*/*.test.ts",
        "dist",
        "node_modules"
    ]
}
